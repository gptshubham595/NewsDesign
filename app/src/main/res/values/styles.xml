<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/nav</item>
        <item name="colorPrimaryDark">@color/nav</item>
        <item name="SwipeFlingStyle">@style/SwipeFling</item>
        <item name="android:navigationBarColor">@color/nav</item>
        <item name="colorAccent">@color/colorAccent</item>
 <item name="android:windowAnimationStyle">@style/customActivityAnimation</item>
    
    </style>
    <style name="AppTheme1" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ff4000</item>
        <item name="colorPrimaryDark">#ff4000</item>
        <item name="SwipeFlingStyle">@style/SwipeFling</item>
        <item name="android:navigationBarColor">#ff4000</item>
        <item name="colorAccent">@color/colorAccent</item>
 <item name="android:windowAnimationStyle">@style/customActivityAnimation</item>
    
    </style>
 <style name="customActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/rotateinright</item>
        <item name="android:activityOpenExitAnimation">@anim/rotateoutleft</item>
        <item name="android:activityCloseEnterAnimation">@anim/rotateinleft</item>
        <item name="android:activityCloseExitAnimation">@anim/rotateoutright</item>
    </style>
</resources>
