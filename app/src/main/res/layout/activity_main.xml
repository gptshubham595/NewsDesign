<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:cardCornerRadius="30dp"
    android:background="#9b9595"
    android:outlineAmbientShadowColor="@color/colorPrimary"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<RelativeLayout
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="8dp"
        android:layout_margin="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@mipmap/ic_search" />

    <Button
        android:id="@+id/button2"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:layout_width="60dp"
        android:layout_alignParentTop="true"
        android:layout_height="60dp"
        android:background="@mipmap/ic_home"
         />
<com.flaviofaria.kenburnsview.KenBurnsView
    android:layout_marginTop="70dp"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:id="@+id/image"
    android:src="@drawable/ab"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        
        android:layout_marginBottom="240dp"
        android:text="Heading goes here"
        android:padding="8dp"
        android:id="@+id/heading"
        android:textSize="24dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:typeface="serif" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="310dp"
        android:padding="8dp"
        android:text="Hello This is the news Showcase and with a small description, While being here this looks to be great being here. So whats about the news to be here"
        android:textSize="18dp"
        />
    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Tags"
        android:textColor="#8c09ff"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:typeface="sans"
        android:id="@+id/tags"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Poll"
        android:textColor="#8c09ff"
        android:layout_toEndOf="@id/tags"
        android:layout_toStartOf="@id/features"
        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        />
    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Features"
        android:textColor="#8c09ff"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:id="@+id/features"
        />
</RelativeLayout>
</android.support.v7.widget.CardView>