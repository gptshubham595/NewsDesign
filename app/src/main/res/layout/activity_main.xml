<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:cardCornerRadius="30dp"
    android:background="#9b9595"
    android:outlineAmbientShadowColor="@color/colorPrimary"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:id="@+id/layout"
        android:layout_marginRight="5dp">

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="8dp"
            android:background="@mipmap/ic_search"
            android:padding="8dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_margin="8dp"
            android:background="@mipmap/ic_home"
            android:padding="8dp" />

        <ViewFlipper
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="70dp"
            android:id="@+id/slide">

        </ViewFlipper>


        <TextView
            android:id="@+id/heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/slide"
            android:layout_alignParentStart="true"
            android:padding="8dp"
            android:text="Heading goes here"
            android:textColor="#000000"
            android:textSize="24dp"
            android:textStyle="bold"
            android:typeface="serif" />
<ScrollView
    android:layout_width="match_parent"
    android:layout_below="@id/heading"
    android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:padding="8dp"
            android:backgroundTint="#fafafa"
            android:background="@drawable/shape"

            android:text="Hello This is the news Showcase and with a small description, While being here this looks to be great being here. So whats about the news to be here"
            android:textSize="18dp" />
</ScrollView>
        <Button
            android:id="@+id/tags"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape"
            android:text="Tags"
            android:textColor="#8c09ff"
            android:typeface="sans" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@id/features"
            android:layout_toEndOf="@id/tags"
            android:background="@drawable/shape"
            android:text="Poll"
            android:textColor="#8c09ff" />

        <Button
            android:id="@+id/features"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape"
            android:text="Features"
            android:textColor="#8c09ff" />
    </RelativeLayout>
</android.support.v7.widget.CardView>